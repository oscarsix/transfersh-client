#!/usr/bin/env python3

from pathlib import Path

transfersh_server = input("Please enter a transfersh server url : ")

transfersh_dir = Path.home().joinpath('.transfersh')
if not transfersh_dir.exists():
    transfersh_dir.mkdir()

transfersh_dir.joinpath('config.yaml').write_text("---\nserver: '" + transfersh_server + "'\n")
